<section id='inns'>
  <h2> Pousadas </h2>
    <% @inns.each do |i| %>
      <% if i.active %>
        <div>
          <h3><%= link_to(i.trade_name, inn_path(i.id)) %></h3>
          <dl>
            <dt>Descrição:</dt>
            <dd><%= i.description %></dd>
          </dl>
          <dl>
            <dt>Cidade:</dt>
            <dd><%= i.address.city %></dd>
          </dl>
        </div>
      <% end %>
  <% end %>

  <% if @inns.empty? || (@inns.count == 1 && !@inns.last.active) %>
    <p>Não existem pousadas cadastradas</p>
  <% end %>
</section>